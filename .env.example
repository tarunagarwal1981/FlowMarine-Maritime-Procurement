# Database Configuration
DATABASE_URL="postgresql://flowmarine:flowmarine_dev_password@localhost:5432/flowmarine"
DATABASE_URL_TEST="postgresql://flowmarine_test:flowmarine_test_password@localhost:5433/flowmarine_test"

# Redis Configuration
REDIS_URL="redis://:flowmarine_redis_password@localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:5173"

# Email Configuration (for development)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@flowmarine.com"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# External API Keys (to be configured)
EXCHANGE_RATE_API_KEY=""
IMPA_API_KEY=""
ISSA_API_KEY=""
PORT_DATABASE_API_KEY=""

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_VESSEL_MAX_REQUESTS=50

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_AUDIT_LOGGING=true

# Development Tools
ENABLE_SWAGGER=true
LOG_LEVEL="debug"