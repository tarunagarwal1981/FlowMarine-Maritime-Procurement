# Database Configuration
DATABASE_URL="postgresql://flowmarine:password@localhost:5432/flowmarine_dev"
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-change-this-in-production"
JWT_REFRESH_EXPIRY="7d"

# Server Configuration
NODE_ENV="development"
PORT=3001
LOG_LEVEL="info"

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@flowmarine.com"
FROM_NAME="FlowMarine System"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf,doc,docx,xls,xlsx"

# External API Configuration
EXCHANGE_RATE_API_KEY="your-exchange-rate-api-key"
EXCHANGE_RATE_API_URL="https://api.exchangerate-api.com/v4/latest"

# Maritime Integration APIs
AIS_API_URL="https://api.marinetraffic.com/v1"
GPS_API_URL="https://api.gpsgateway.com/v1"
SATELLITE_API_URL="https://api.exactearth.com/v1"
MARITIME_API_KEY="your-maritime-api-key-here"

# IMPA/ISSA Catalog APIs
IMPA_API_URL="https://api.impa.net/v2"
ISSA_API_URL="https://api.issa.org/v1"
MARITIME_CATALOG_API_KEY="your-catalog-api-key-here"

# Port Database APIs
PORT_API_URL="https://api.portworld.com/v1"
CUSTOMS_API_URL="https://api.customsinfo.com/v1"
AGENT_API_URL="https://api.portagents.com/v1"
PORT_API_KEY="your-port-api-key-here"

# Vessel Management System APIs
DANAOS_API_URL="https://api.danaos.com/v2"
DANAOS_API_KEY="your-danaos-api-key-here"
SHIPSERV_API_URL="https://api.shipserv.com/v3"
SHIPSERV_ACCESS_TOKEN="your-shipserv-token-here"
AMOS_API_URL="https://api.amos.com/v1"
AMOS_USERNAME="your-amos-username"
AMOS_PASSWORD="your-amos-password"

# Banking Integration APIs
SWIFT_API_URL="https://api.swift.com/v1"
SWIFT_API_KEY="your-swift-api-key"
ACH_API_URL="https://api.achpayments.com/v1"
ACH_API_KEY="your-ach-api-key"
SEPA_API_URL="https://api.sepapayments.eu/v1"
SEPA_ACCESS_TOKEN="your-sepa-token"

# Exchange Rate APIs
FIXER_API_KEY="your-fixer-api-key"
CURRENCYLAYER_API_KEY="your-currencylayer-api-key"
OPENEXCHANGERATES_API_KEY="your-openexchangerates-api-key"

# Payment Gateway APIs
STRIPE_API_KEY="your-stripe-api-key"
PAYPAL_ACCESS_TOKEN="your-paypal-token"
SQUARE_API_KEY="your-square-api-key"

# Accounting System APIs
QUICKBOOKS_ACCESS_TOKEN="your-quickbooks-token"
XERO_ACCESS_TOKEN="your-xero-token"
SAGE_API_KEY="your-sage-api-key"
NETSUITE_ACCESS_TOKEN="your-netsuite-token"

# Banking Integration (for payment processing)
BANKING_API_URL="https://api.bank.com"
BANKING_API_KEY="your-banking-api-key"

# Encryption Configuration
ENCRYPTION_KEY="your-32-character-encryption-key-here"
ENCRYPTION_ALGORITHM="aes-256-gcm"
FIELD_ENCRYPTION_KEY="your-field-encryption-key-for-banking-data-32-chars"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_VESSEL_MAX_REQUESTS=50

# Session Configuration
SESSION_SECRET="your-session-secret-key-change-this"
SESSION_TIMEOUT=3600000

# Audit Configuration
AUDIT_RETENTION_DAYS=2555
AUDIT_LOG_LEVEL="info"

# Notification Configuration
NOTIFICATION_QUEUE_ENABLED=true
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Development Configuration
PRISMA_STUDIO_PORT=5555
ENABLE_QUERY_LOGGING=true
ENABLE_CORS=true
CORS_ORIGIN="http://localhost:3000"

# Production Configuration (uncomment for production)
# HTTPS_ENABLED=true
# SSL_CERT_PATH="/path/to/cert.pem"
# SSL_KEY_PATH="/path/to/key.pem"
# TRUST_PROXY=true