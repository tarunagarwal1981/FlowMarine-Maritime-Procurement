# FlowMarine Production Environment Configuration

# Database Configuration
POSTGRES_DB=flowmarine_prod
POSTGRES_USER=flowmarine_user
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://flowmarine_user:your_secure_database_password_here@postgres:5432/flowmarine_prod

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email Service Configuration
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
EMAIL_FROM_ADDRESS=noreply@flowmarine.com
EMAIL_FROM_NAME=FlowMarine System

# External API Keys
BANKING_API_KEY=your_banking_api_key_here
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here
PORT_DATABASE_API_KEY=your_port_database_api_key_here
IMPA_CATALOG_API_KEY=your_impa_catalog_api_key_here
AIS_GPS_API_KEY=your_ais_gps_api_key_here
OCR_SERVICE_API_KEY=your_ocr_service_api_key_here

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here
PROMETHEUS_RETENTION_DAYS=30

# Backup Configuration
AWS_S3_BACKUP_BUCKET=flowmarine-backups
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX_REQUESTS=5
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Application Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=info
CORS_ORIGIN=https://your-domain.com
TRUST_PROXY=true

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# Performance Configuration
CACHE_TTL_SECONDS=3600
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT_MS=30000

# Compliance Configuration
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
DATA_RETENTION_YEARS=7
GDPR_COMPLIANCE_ENABLED=true

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_OFFLINE_SYNC=true
ENABLE_EMERGENCY_PROCEDURES=true